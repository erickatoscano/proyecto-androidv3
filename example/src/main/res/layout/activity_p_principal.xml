<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p_principal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hilos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="163dp"
                android:layout_height="187dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/logoxipixapa"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="88dp" />
            <ImageView
                android:id="@+id/icono1"
                style="@style/img_principal"
                app:srcCompat="@drawable/asset04" />
            <ImageView
                android:id="@+id/icono2"
                style="@style/img_principal"
                app:srcCompat="@drawable/asset01" />

            <ImageView
                android:id="@+id/icono3"
                style="@style/img_principal"
                app:srcCompat="@drawable/assetcasa" />

            <ImageView
                android:id="@+id/icono5"
                style="@style/img_principal"
                app:srcCompat="@drawable/asset5" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>