<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".street_detalle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar"/>

            <TextView
                android:id="@+id/hilos2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textView2"
                style="@style/titulos"
                android:text="" />

            <TextView
                android:id="@+id/subtitulo"
                style="@style/subtitulos"
                android:text="dssdsdsd" />


            <LinearLayout
                android:id="@+id/linearLay2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/textView3"
                style="@style/sub"
                android:text="Historia" />

            <TextView
                android:id="@+id/historia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text='' />


            <TextView
                android:id="@+id/textView5"
                style="@style/sub"
                android:text="Tienda - Recuerdos relacionados"/>


            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:columnCount="4"
                android:gravity="center">

                <ImageView
                    android:layout_gravity="center"
                    style="@style/imagen_tienda"
                    app:srcCompat="@drawable/tienda" />

                <ImageView
                    android:layout_gravity="center"
                    style="@style/imagen_tienda"
                    app:srcCompat="@drawable/tienda"/>

                <TextView
                    style="@style/tienda_sub"
                    android:text="Librito Tradición Oral" />

                <TextView
                    style="@style/precio"
                    android:text="10$"/>

                <TextView
                    style="@style/tienda_sub"
                    android:text="Librito Tradición Oral" />

                <TextView
                    style="@style/precio"
                    android:text="10$"/>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>